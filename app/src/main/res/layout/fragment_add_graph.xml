<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/pieCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Pie graph"
            android:textColor="@color/our_black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:drawableTop="@drawable/ic_pie_chart"
            android:button="@android:color/transparent"/>

        <CheckBox
            android:id="@+id/colCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Column graph"
            android:textColor="@color/our_black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:drawableTop="@drawable/ic_typical_chart"
            android:button="@android:color/transparent"/>

        <CheckBox
            android:id="@+id/barCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Bar graph"
            android:textColor="@color/our_black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:drawableTop="@drawable/ic_bar_chart"
            android:button="@android:color/transparent"/>

        <CheckBox
            android:id="@+id/waterCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Waterfall graph"
            android:textColor="@color/our_black"
            android:textAlignment="center"
            android:textSize="18sp"
            android:drawableTop="@drawable/ic_bar_chart"
            android:button="@android:color/transparent"
            android:layout_marginBottom="75dp"/>
    </LinearLayout>
</ScrollView>